<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>@ViewBag.Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" type='text/css' media='screen' href="~/css/css/fontawesome.min.css" />
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/sitio.css' />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />

    </environment>
    <script src='main.js'></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">

                <header>
                    <div class="container">
                        <nav class="navbar navbar-expand-lg  navbar-light font-weight-bolder justify-content-center fixed-top mt-2">
                            <div class="container">
                                <a class="navbar-brand" href="#">
                                    <img src="~/images/logo.png" alt="">
                                </a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>

                                <div class="collapse navbar-collapse mx-5" id="navbar">
                                    <ul class="navbar-nav mr-auto  mx-5 ">
                                        <li class="nav-item ml-2  active">
                                            <a href="#" class="nav-link text-dark">HOME</a>
                                        </li>
                                        <!--boton desplegable-->

                                        <li class="nav-item dropdown  mx-3">
                                            <a href="#" class="nav-link dropdown-toggle  text-dark" id="menu-categorias" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                PARA EMPLEADOS
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="menu categorias">
                                                <a href="#" class="dropdown-item">Buscar trabajos</a>
                                                <a href="#" class="dropdown-item">Buscar categorias</a>


                                            </div>
                                        </li>
                                        <li class="nav-item dropdown ">
                                            <a href="#" class="nav-link dropdown-toggle  text-dark" id="navbarDropdown" data-toggle="dropdown">
                                                PARA CANDIDATOS
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                <a href="#" class="dropdown-item">Agregar trabajos</a>
                                            </div>
                                        </li>

                                    </ul>
                                    <ul class="responsive float-right ">
                                        <li class="nav-item regist_log  px-4 py-2 mr-2" style="background-color:lightgrey;">
                                            <a style="text-decoration:none;color:black;" href="#"> <i class="fa fa-lock"></i> Log In</a>
                                        </li>
                                        <li class="nav-item regist_log  px-3 py-2" style="background-color:#53b427;">
                                            <a style="text-decoration:none;color:black;" href="#"><i class="fa fa-user-o"></i>  Sign Up</a>
                                        </li>

                                    </ul>


                                </div>
                            </div>

                        </nav>
                    </div>
                    <div class="clearfix"></div>
                </header>

                <main>
                    <div>
                        @RenderBody()
                    </div>

                    @RenderSection("Scripts", required: false)
                </main>

            </div>
        </div>
    </div>

   

</body>
</html>